---
import PostCard from '@/components/blog/PostCard.astro'

interface Post {
  slug: string
  data: any
}

const { posts, title = 'Makala zinazohusiana' } = Astro.props as { posts: Post[]; title?: string }
---

{posts.length > 0 && (
  <section class='space-y-6'>
    <div class='flex items-center justify-between'>
      <h2 class='text-2xl font-semibold text-foreground'>{title}</h2>
      <a href='/blog' class='text-sm font-medium text-primary hover:underline'>Ona zote</a>
    </div>
    <div class='grid gap-6 md:grid-cols-2 lg:grid-cols-3'>
      {posts.map(post => (
        <PostCard post={post} />
      ))}
    </div>
  </section>
)}
