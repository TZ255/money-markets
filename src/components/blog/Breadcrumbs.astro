---
interface Crumb {
  label: string
  href?: string
}

const { items } = Astro.props as { items: Crumb[] }
---

<nav aria-label='Breadcrumb' class='text-sm text-muted-foreground'>
  <ol class='flex flex-wrap items-center gap-2'>
    {items.map((item, index) => (
      <>
        {index > 0 && <span class='text-border'>/</span>}
        <li>
          {item.href ? (
            <a class='hover:text-primary' href={item.href}>{item.label}</a>
          ) : (
            <span class='text-foreground font-medium'>{item.label}</span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>
